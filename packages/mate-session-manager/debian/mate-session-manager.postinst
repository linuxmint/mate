#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
	update-alternatives --install /usr/bin/x-session-manager \
	    x-session-manager /usr/bin/mate-session 30 \
	    --slave /usr/share/man/man1/x-session-manager.1.gz \
	    x-session-manager.1.gz /usr/share/man/man1/mate-session.1.gz
fi

